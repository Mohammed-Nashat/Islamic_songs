<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="seekBar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">154dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="play_button_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:tint">@color/primaryLightColor</item>
    </style>

    <style name="play_next_back_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:tint">@color/primaryLightColor</item>
    </style>
</resources>